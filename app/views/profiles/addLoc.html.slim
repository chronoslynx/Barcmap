script src="http://platform.twitter.com/widgets.js" type="text/javascript"
.row
  .cleancontent
    h1 
      |Location Unlocked! 
      = image_tag "/images/unlocked.png", :class => "unlocked"
    h2=@loc.name + "!"
    h4=@loc.description
    p Share this to twitter!
    a href="http://twitter.com/share" class="twitter-share-button" data-text="#{current_user.name} just unlocked the #{@loc.name} location on Barcelona Adventurer!" data-count="none"
    - if @unlocked_badge
    	h4 
    		|It looks like you've unlocked a badge as well! click 
			a href="#{@unlocked_badge_url}" here
			' to unlock it!

    